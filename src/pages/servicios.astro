---
import Layout from "../layouts/Layout.astro";
import { informationServices } from "../data";
const info = informationServices;
---

<Layout title="Nuestros Servicios">
  <section class="bg-white w-full">
    <div class="container mx-auto p-2 pt-6 md:p-6 lg:p-12">
      <h1
        class="text-4xl text-center uppercase font-extrabold text-[#365b6d] mb-1"
      >
        nuestros servicios
      </h1>
    </div>
    <div class="max-w-7xl mx-auto space-y-24 px-6 lg:px-0 py-16">
      <!-- UTILIDAD REUTILIZABLE -->
      <!-- Cada bloque alterna con md:flex-row o md:flex-row-reverse -->
      {
        info.map((item) => {
          return (
            <div
              class={`flex flex-col ${
                item.reverse ? "md:flex-row-reverse" : "md:flex-row"
              } items-center gap-10 group`}
            >
              <div class="md:w-1/2 w-full">
                <img
                  src={item.img}
                  alt={item.titulo}
                  class="rounded-xl shadow-md w-full h-auto object-cover transition-transform duration-300 group-hover:scale-105"
                />
              </div>
              <div class="md:w-1/2 w-full">
                <h3 class="text-3xl font-extrabold text-[#365b6d] mb-4">
                  {item.titulo}
                </h3>
                <p class="text-gray-700 leading-relaxed text-lg">
                  {item.texto}
                </p>
              </div>
            </div>
          );
        })
      }
    </div>
  </section>
</Layout>
